generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model author {
  id    Int    @id @default(autoincrement())
  name  String @unique()
  route String
  book  book[]
}

model book {
  id          Int        @id @default(autoincrement())
  title       String     @unique()
  bookUrl     String     @unique()
  imageUrl    String
  updatedAt   DateTime   @default(now())
  totalStars  Int
  isHot       Boolean
  userrated   Int
  aspectRatio Decimal    @default(0.0)
  ratings     Decimal
  views       Int
  source      String     @default("novelbin")
  status      String
  description Bytes
  authorId    Int
  author      author     @relation(fields: [authorId], references: [id])
  chapter     chapter[]
  category    category[] @relation("booktocategory")
  genre       genre[]    @relation("booktogenre")
  recents     recents?
}

model category {
  id    Int    @id @default(autoincrement())
  name  String @unique()
  route String
  book  book[] @relation("booktocategory")
}

model chapter {
  id      Int      @id @default(autoincrement())
  content Bytes
  url     String
  likes   Int
  views   Int
  title   String
  number  Int
  bookId  Int
  addAt   DateTime @default(now())
  book    book     @relation(fields: [bookId], references: [id],onDelete: Cascade, onUpdate: Cascade)
}

model genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  route String
  book  book[] @relation("booktogenre")
}

model recents {
  id     Int      @id @default(autoincrement())
  bookId Int      @unique
  addAt  DateTime @updatedAt
  book   book     @relation(fields: [bookId], references: [id],onDelete: Cascade, onUpdate: Cascade)
  url    String
  title  String
}
